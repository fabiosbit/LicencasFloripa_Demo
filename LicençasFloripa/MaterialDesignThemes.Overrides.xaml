<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"                                     
                    xmlns:materialDesign="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
                    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">

    <Style TargetType="xctk:MaskedTextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}"/>

    <Style x:Key="MaterialDesignFloatingHintTextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}" TargetType="{x:Type TextBox}">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="materialDesign:HintAssist.FloatingScale" Value="0.8" />
        <Setter Property="materialDesign:HintAssist.FloatingOffset" Value="1,-16" />
    </Style>

</ResourceDictionary>     